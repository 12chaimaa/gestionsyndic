@model IEnumerable<gestionsyndic.web.Models.Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contenu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEnvoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstLu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destinataire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expediteur)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Contenu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnvoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstLu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destinataire.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expediteur.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
